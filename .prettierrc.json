{
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5",
    "printWidth": 80,
    "arrowParens": "always",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.{yml,yaml}",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.md",
            "options": {
                "printWidth": 100,
                "proseWrap": "preserve"
            }
        },
        {
            "files": "*.json",
            "options": {
                "printWidth": 100
            }
        }
    ]
}
